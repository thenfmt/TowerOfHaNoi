package jpanels;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;
import java.util.List;

import button.CircleButton;
import frame.Frame;

public class Hint extends Game {

	/**
	 * Create the panel.
	 */
	private int index = -1;
	private List<int[]> next = new ArrayList<int[]>();
	private List<int[]> back = new ArrayList<int[]>();
	
	public Hint(){
		super();
		setAllowMove(true);
		setAllowPick(false);
		solution();
		
		CircleButton btnNext = new CircleButton(50, 6);
		btnNext.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				index = Math.min(next.size(), index+1);
				if(index == next.size())
					return;
							
				int from = next.get(index)[0];
				int to = next.get(index)[1];
				moveDisk(from, to);
				
			}
		});
		btnNext.setBounds(649, 595, 50, 50);
		add(btnNext);
		
		CircleButton btnBack = new CircleButton(50, 0);
		btnBack.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				index = Math.max(-1, index-1);
				if(index == -1)
					return;
				
				int from = next.get(index)[1];
				int to = next.get(index)[0];
				moveDisk(from, to);
				
			}
		});
		btnBack.setBounds(326, 595, 50, 50);
		add(btnBack);
		
		CircleButton btnPlay = new CircleButton(50, 5);
		btnPlay.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Frame.gameOn();
			}
		});
		btnPlay.setBounds(69, 33, 50, 50);
		add(btnPlay);
		
		
		add(background);
	}
	
	public void solution() {
		recusive(GamePlay.height, 1, 3, 2);
		printRes();
	}
	
	public void recusive(int height, int A, int C, int B) {
		if(height==0) {
			int arr[] = {A, C};
			back.add(arr);
			return;
		}
		recusive(height-1, A, B, C);
		int arr[] = {A, C};
		next.add(arr);
		recusive(height-1, B, C, A);
	}
	
	public void printRes() {
		for(int i = 0; i < next.size(); i++)
			System.out.println(next.get(i)[0] + " - " + next.get(i)[1]);
		
		System.out.println("\n\n");
		
		for(int i = 0; i < back.size(); i++)
			System.out.println(back.get(i)[0] + " - " + back.get(i)[1]);
	}

}
