package jpanels;
import java.awt.FontFormatException;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JButton;

import frame.Frame;

public class Hint extends Game {

	/**
	 * Create the panel.
	 */
	private int index = -1;
	private List<int[]> step = new ArrayList<int[]>();
	
	public Hint(){
		super();
		setAllowMove(true);
		setAllowPick(false);
		solution();
		
		JButton next = new JButton("Next");
		next.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				index = Math.min(step.size(), index+1);
				if(index == step.size())
					return;
							
				int from = step.get(index)[0];
				int to = step.get(index)[1];
				moveDisk(from, to);
				
			}
		});
		next.setBounds(649, 595, 89, 23);
		add(next);
		
		JButton back = new JButton("Back");
		back.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				index = Math.max(-1, index-1);
				if(index == -1)
					return;
				
				int from = step.get(index)[1];
				int to = step.get(index)[0];
				moveDisk(from, to);
				
			}
		});
		back.setBounds(326, 595, 89, 23);
		add(back);
		
		JButton gamePlayBtn = new JButton("Play");
		gamePlayBtn.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Frame.gameOn();
			}
		});
		gamePlayBtn.setBounds(65, 51, 89, 23);
		add(gamePlayBtn);
		
		
		add(background);
	}
	
	public void solution() {
		recusive(GamePlay.height, 1, 3, 2);
	}
	
	public void recusive(int height, int A, int C, int B) {
		if(height==0)
			return;
		recusive(height-1, A, B, C);
		int arr[] = {A, C};
		step.add(arr);
		System.out.println(A + " - " + B);
		recusive(height-1, B, C, A);
	}

}
