package jpanels;

import java.awt.Font;
import java.awt.FontFormatException;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.JPanel;

import button.CircleButton;
import frame.Frame;
import images.Texture;
import java.awt.Color;

public class Launcher extends JPanel {
	private Texture texture;

	
	public Launcher() throws FontFormatException, IOException {
		
		setLayout(null);
		setBounds(0, 0, 1080, 720);
		texture = new Texture();
		
		CircleButton btnPlay = new CircleButton(50, 5);
		btnPlay.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Frame.gameOn();
			}
		});
		btnPlay.setBounds(334, 444, 50, 50);
		add(btnPlay);
		
		JLabel lblHeight = new JLabel("Height: 3");
		lblHeight.setForeground(new Color(206, 202, 191));
		lblHeight.setFont(new Font("SP3 - Traveling Typewriter", Font.PLAIN, 20));
		lblHeight.setBounds(494, 444, 110, 50);
		add(lblHeight);
		
		CircleButton btnUp = new CircleButton(25, 7);
		btnUp.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Game.height = Math.min(Game.height+1, 5);
				lblHeight.setText("Height: " + Game.height);
			}
		});
		btnUp.setBounds(594, 444, 50, 50);
		add(btnUp);
		
		CircleButton btnDown = new CircleButton(25, 3);
		btnDown.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Game.height = Math.max(Game.height-1, 3);
				lblHeight.setText("Height: " + Game.height);
			}
		});
		btnDown.setBounds(434, 444, 50, 50);
		add(btnDown);
		
		CircleButton btnExit = new CircleButton(50, 1);
		btnExit.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				System.exit(0);
			}
		});
		btnExit.setBounds(688, 444, 50, 50);
		add(btnExit);
		
		
		
		JLabel lblTitle1 = new JLabel("TOWER");
		lblTitle1.setForeground(new Color(206, 202, 191));
		lblTitle1.setFont(new Font("SP3 - Traveling Typewriter", Font.BOLD, 80));
		lblTitle1.setBounds(407, 108, 265, 73);
		add(lblTitle1);
		
		
		JLabel lblTitl3 = new JLabel("HA NOI");
		lblTitl3.setForeground(new Color(206, 202, 191));
		lblTitl3.setFont(new Font("SP3 - Traveling Typewriter", Font.BOLD, 80));
		lblTitl3.setBounds(395, 286, 284, 73);
		add(lblTitl3);
		
		
		JLabel lblTitle2 = new JLabel("of");
		lblTitle2.setForeground(new Color(206, 202, 191));
		lblTitle2.setFont(new Font("SP3 - Traveling Typewriter", Font.BOLD, 70));
		lblTitle2.setBounds(492, 202, 97, 73);
		add(lblTitle2);
		
		
		JLabel background = new JLabel(new ImageIcon(texture.background));
		background.setBounds(getBounds());
		add(background);
	}
}
